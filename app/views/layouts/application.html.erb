<html>
  <head>
    <%= render 'shared/meta' %>
    <title><%= @title %></title>
    <%= Siteconf.custom_head_tags&.html_safe %>
    <%= yield :head %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <% if Siteconf.custom_css.present? %>
      <style type="text/css">
        <%= Siteconf.custom_css.html_safe %>
      </style>
    <% end %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true, type: "module" %>
    <%= yield :final_head %>
  </head>
  <body class="bg-white">
    <% if content_for?(:app) %>
      <%= yield :app %>
    <% else %>
      <%= yield %>
    <% end %>
    <%= render 'modals/sign_in' %>
    <%= render 'modals/sign_up' %>
  </body>
</html>
