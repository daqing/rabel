<div id="sign-up-modal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <div class="flex justify-between items-center">
      <div class="text-zinc-600">注册账号</div>
      <div class="text-right">
        <span class="close">&times;</span>
      </div>
    </div>
    <%= form_for :sign_up, url: registrations_path do |f| %>
      <div class="mb-4">
        <div class="mt-4">
          <%= f.text_field :nickname, placeholder: '昵称', class: 'w-full', required: true %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, placeholder: '密码', class: 'w-full', required: true %>
        </div>
      </div>
      <%= f.submit '加入社区', class: 'btn-primary w-full mt-2 py-2' %>
    <% end %>
  </div>
</div>
