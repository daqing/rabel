- if user_signed_in?
  .inner
    .fr{:align => :right}
      - if current_user.bookmarked?(@topic)
        = link_to '取消收藏', current_user.bookmark_of(@topic), data: {turbo_method: :delete}, :class => 'op cancel'
      - else
        = link_to '加入收藏', topic_bookmarks_path(@topic), data: {turbo_method: :post}, :class => :op
